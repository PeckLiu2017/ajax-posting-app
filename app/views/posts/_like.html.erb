<% if post.liked_users.any? %>

  <%= post.liked_users.map{ |u| u.display_name }.join(",") %> 点了赞
<% end %>

<% if current_user # 有登入才可以按讚 %>
  <% if post.find_like(current_user) #如果已经点赞就显示取消点赞的按钮，没点赞就显示点赞的按钮 %>
    <%= link_to "-1", unlike_post_path(post), :remote => true, :method => :post, :class => "btn btn-primary" %>
  <% else %>
    <%= link_to "+1", like_post_path(post), :remote => true, :method => :post, :class => "btn btn-primary" %>
  <% end %>
<% end %>
